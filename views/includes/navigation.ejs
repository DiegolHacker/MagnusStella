  <body>
    <nav>
      <div class="nav-bar">
        <div class="darkLight-profile">
          <div class="dark-light">
            <i class="bx bx-moon moon"></i>
            <i class="bx bx-sun sun"></i>
          </div>
        </div>

        <!-- <div class="logo-zebrands">
                <img src="/logos/Logo_Zebrands.png" width="380px" height="75px" alt="">
            </div> -->

        <span class="titulo"><strong><%= titulo %></strong></span>
        
        <div class="dropdown dropdown-marca">
          <button class="dropbtn dropbtn-marca">
            <% if(marca == "LU1"){ %>
            <img
              class="brand-logo default-brand"
              src="/logos/Logo_Luuna_3.png"
              width="196 px"
              height="61 px"
              alt="Logo de Luuna"
            />
            <% } %> <% if(marca == "NO1"){ %>
            <img
              class="brand-logo"
              src="/logos/Logo_Nooz_3.png"
              width="196 px"
              height="61 px"
              alt="Logo de Nooz"
            />
            <% } %> <% if(marca == "MA1"){ %>
            <img
              class="brand-logo"
              src="/logos/Logo_Mappa_3.png"
              width="196 px"
              height="61 px"
              alt="Logo de Mappa"
            />
            <% } %>
          </button>
          <i class='bx bxs-chevron-down icono'></i>
          <div class="dropdown-content dropdown-content-marca">
            <a href="<%=ruta%>/LU1"
              ><img
                class="select-brand"
                data-value="LU1"
                src="/logos/Logo_Luuna_2.png"
                width="150 px"
                height="50 px"
                alt="Logo de Luuna"
            /></a>
            <a href="<%=ruta%>/NO1"
              ><img
                class="select-brand"
                data-value="NO1"
                src="/logos/Logo_Nooz_2.png"
                width="150 px"
                height="50 px"
                alt="Logo de Nooz"
            /></a>
            <a href="<%=ruta%>/MA1"
              ><img
                class="select-brand"
                data-value="MA1"
                src="/logos/Logo_Mappa_2.png"
                width="150 px"
                height="50 px"
                alt="Logo de Mappa"
            /></a>
          </div>
        </div>
      </div>
    </nav>

    <nav class="side_bar close">
      <header>
        <i class="bx bx-chevron-right toggle" id="toggle-sidebar"> </i>
      </header>

      <div class="menu-bar">
        <div class="menu">
          <ul class="menu-links">
            <% let ver = false%>
            <% let editar = false%>
            <% let administrar = false%>
            <% for (let funcion of permisos) { %> 
                    <% if (funcion.funcion == "ver"){ ver = true } %>
                    <% if (funcion.funcion == "editar"){ editar = true } %>
                    <% if (funcion.funcion == "administracion"){ administrar = true } %>
            <% } %>
              <% if (ver == true) { %>
              <li class="nav-link">
                <a href="/graphics/dashboard/<%=marca%>">
                  <i class="bx bx-line-chart icon"></i>
                  <span class="text nav-text">Dashboard</span>
                </a>
              </li>
              <li class="nav-link">
                <a href="/reviews/resenas/<%=marca%>">
                  <i class="bx bx-star icon"></i>
                  <span class="text nav-text">Reseñas</span>
                </a>
              </li>
              <% } %>
              <% if (editar == true) { %>
              <li class="nav-link">
                <a href="/emails/correos/<%=marca%>">
                  <i class="bx bx-envelope icon"></i>
                  <span class="text nav-text">Correos</span>
                </a>
              </li>
              <% } %> 
              <% if (administrar == true) { %>
              <li class="nav-link">
                <a href="/usuarios/1/<%= marca %>">
                  <i class="bx bxs-user-plus icon"></i>
                  <span class="text nav-text">Usuarios</span>
                </a>
              </li>
              <% } %> 


          </ul>

          <ul class="menu-links bottom-icons">
            <li class="nav-link">
              <a href="/ayuda/<%=marca%>">
                <i class="bx bx-help-circle icon"></i>
                <span class="text nav-text">Ayuda</span>
              </a>
            </li>

            <li class="nav-link">
              <a href="/users/logout">
                <i class="bx bx-exit icon"></i>
                <span class="text nav-text">Logout</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="main-content">