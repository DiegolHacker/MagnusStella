<%- include('includes/navigation.ejs') %>

<link rel="stylesheet" href="/ccs/usuarios-resenia.css">


    <div class="container-fluid">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="text">
                        <h2><b>Control de usuarios</b></h2>
                    </div>
                    <div class="buttons">
                        <a href="#" class="btn btn-primary"><i class='bx bx-user-plus icon'></i><span>Crear usuario</span></a>
                        <a href="#" class="btn btn-primary"><i class='bx bx-file icon'></i> <span>Exportar a Excel</span></a>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Id#</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Acci√≥n</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% usuarios.forEach(function(usuario) { %>
                    <tr>
                        <td><%= usuario.id %></td>
                        <td><a href="#"><img src="images/<%= usuario.id %>.jpg" class="avatar" alt="Avatar"> <%= usuario.nombre %></a></td>
                        <td><%= usuario.correo %></td>
                        <td><%= usuario.rol %></td>
                        <% if (usuario.estado === "Inactivo") { %>
                        <td><span class="status text-warning">&bull;</span> <%= usuario.estado %></td>
                        <% } else { %>
                        <td><span class="status text-success">&bull;</span> <%= usuario.estado %></td>
                        <% } %>
                        <td>
                            <a href="#" class="settings" title="Editar" data-placement="top" data-toggle="tooltip"><i class='bx bxs-edit-alt'></i></a>
                            <a href="#" class="delete" title="Borrar" data-placement="top" data-toggle="tooltip"><i class='bx bx-trash'></i></a>
                        </td>
                    </tr>
                    <% }); %>
                    </tbody>
                </table>
                <div class="clearfix">
                    <div class="hint-text">Mostrando <b>5</b> de <b>25</b> resultados</div>
                    <ul class="pagination">
                        <li class="page-item"><a href="#" class="page-link">Anterior</a></li>
                        <li class="page-item"><a href="#" class="page-link">1</a></li>
                        <li class="page-item"><a href="#" class="page-link">2</a></li>
                        <li class="page-item active"><a href="#" class="page-link">3</a></li>
                        <li class="page-item"><a href="#" class="page-link">4</a></li>
                        <li class="page-item"><a href="#" class="page-link">5</a></li>
                        <li class="page-item"><a href="#" class="page-link">Siguiente</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

<%- include('includes/footer.ejs') %>
